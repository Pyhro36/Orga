@model ArticleEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Créer</h1>

<h4>Nouvel article de maquillage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Article.Name" class="control-label"></label>
                <input asp-for="Article.Name" class="form-control" />
                <span asp-validation-for="Article.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Article.PurchaseDate" class="control-label"></label>
                <input type="date" asp-for="Article.PurchaseDate" class="form-control" />
                <span asp-validation-for="Article.PurchaseDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Article.BrandId" class="control-label"></label>
                <select asp-for="Article.BrandId" class="form-control" asp-items="Model.Brands">
                    <option value="">--- Sélectionnez une marque ---</option>
                </select>
                <span asp-validation-for="Article.Brand.Id" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des articles</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
