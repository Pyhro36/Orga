@model IEnumerable<Article>

@{
    ViewData["Title"] = "Maquillage";
}

<h1>Articles de Maquillage</h1>

<p>
    <a asp-action="Create">Créer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th><!-- Actions --></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(model => item.Brand.Name)
            </td>
            <td class="text-right">
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
